                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRegion" />

            <TextView
                android:id="@+id/tvCurrencyResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="---"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/tvCurrency"
                app:layout_constraintTop_toTopOf="@+id/tvCurrency" />

            <View
                android:id="@+id/viewUnderline"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/underline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnShowGoogleMaps" />

            <Button
                android:id="@+id/btnShowGoogleMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
