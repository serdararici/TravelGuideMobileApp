                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="---"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/tvRegion"
                app:layout_constraintTop_toTopOf="@+id/tvRegion" />

